<%- include ("./partials/head") %>
<link rel="stylesheet" href="stylesheets/signin.css">
<body class="text-center">
    <form action="/user/login" method="POST" class="form-signin">
        <%- messages('messages', locals) %>
        <img class="mb-4" src="https://media.giphy.com/media/VbnUQpnihPSIgIXuZv/giphy.gif" alt="" width="120" height="120">
        <h1 class="h3 mb-3 font-weight-normal">Welcome Blogger!</h1>
        <label for="username" class="sr-only">Username</label>
        <input type="text" id="username" name="username"class="form-control" placeholder="Username" autofocus>
        <label for="password" class="sr-only">Password</label>
        <input type="password" id="password" name="password" class="form-control" placeholder="Password">
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
        </div>
        <button class="mb-4 btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        <div>
            <p>Don't have an account? <a href="/user/register">Sign Up</a></p>
            <p><a href="/">Home</a></p>
        </div>
        <p class="mt-5 mb-3 text-muted">&copy; made with ❤️</p>
    </form>
</body>